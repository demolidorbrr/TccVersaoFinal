<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.tccversaofinal.Activitys.GerenciarListasActivity">

    <include android:id="@+id/toolbarGerenciarListas"
        layout="@layout/toolbar" />



<ListView
    android:layout_below="@+id/toolbarGerenciarListas"
    android:id="@+id/lv_listas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

</ListView>

    <Button
        android:textColor="@color/branco"
        android:background="@color/laranja"
        android:text="Deletar Ultima lista"
        android:id="@+id/botaoDeletarListas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />




</RelativeLayout>
